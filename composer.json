{
  "name": "devvir/mtav",
  "type": "project",
  "description": "Herramienta para facilitar selecci√≥n de viviendas cooperativas entre socios.",
  "keywords": [
    "cooperativa de viviendas",
    "sorteo de viviendas"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "devvir/laravel-instant-api": "^0.2",
    "devvir/laravel-resource-tools": "^0.1",
    "inertiajs/inertia-laravel": "^2.0",
    "inertiaui/modal": "^0.21.1",
    "laravel/framework": "^12.36",
    "laravel/reverb": "^1.6",
    "laravel/sanctum": "^4.2",
    "laravel/tinker": "^2.10",
    "php-ffmpeg/php-ffmpeg": "^1.3",
    "tightenco/ziggy": "^2.6"
  },
  "require-dev": {
    "fakerphp/faker": "^1.24",
    "laravel/pail": "^1.2",
    "laravel/pint": "^1.25",
    "laravel/sail": "^1.47",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.8",
    "nunomaduro/phpinsights": "^2.13",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-browser": "4.x-dev",
    "pestphp/pest-plugin-laravel": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    },
    "files": [
      "app/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "packages/laravel-instant-api"
    },
    {
      "type": "path",
      "url": "packages/laravel-resource-tools"
    },
    {
        "type": "vcs",
        "url": "https://github.com/devvir/pest-plugin-browser"
    }
  ]
}
