{
  "preset": "psr12",
  "exclude": [
    "packages"
  ],
  "rules": {
    "concat_space": {
      "spacing": "one"
    },
    "binary_operator_spaces": {
      "operators": {
        "=>": "align_single_space_minimal"
      }
    },
    "array_indentation": true,
    "trim_array_spaces": false
  }
}
